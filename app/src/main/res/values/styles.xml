<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/n2</item>
        <item name="colorPrimaryDark">@color/n2</item>
        <item name="colorAccent">@color/n2</item>

        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">#F5F5F5</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">#F5F5F5</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_appear</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_dissapear</item>
    </style>

</resources>